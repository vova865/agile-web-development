<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1> Your Pragmatic Catalog</h1>

<ul class="catalog">
  <%= @count %>
  <% cache @products do %>
    <% @products.each do |p| %>
      <% cache p do %>
        <li>
          <%= image_tag(p.image_url) %>
          <h2><%= p.title %></h2>
          <p>
            <%= sanitize(p.description) %>
          </p>
          <div class="price">
            <%= number_to_currency(p.price) %>
            <%= button_to 'Add to Cart', line_items_path(product_id: p), remote: true %>
          </div>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>

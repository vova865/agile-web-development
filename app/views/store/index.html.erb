<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1> Your Pragmatic Catalog</h1>

<ul class="catalog">
  <% @products.each do |p| %>
    <li>
      <%= image_tag(p.image_url) %>
      <h2><%= p.title %></h2>
      <p>
        <%= sanitize(p.description) %>
      </p>
      <div class="price">
        <%= p.price %>
      </div>
    </li>
  <% end %>
</ul>
